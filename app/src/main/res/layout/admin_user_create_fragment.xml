<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.admin.user.AUserCreateFragment"
    android:background="@color/colorWhitePrimary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/create_user_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_nama"
                android:textSize="16dp"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="@color/colorBlackPrimary"/>
            <EditText
                android:id="@+id/aucreate_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/colorBluePrimary"
                android:ems="10"
                android:hint="name"
                android:inputType="textPersonName"
                android:textColor="@color/colorBluePrimary"
                android:textColorHint="@color/colorBlueSecondary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="16dp"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="@color/colorBlackPrimary"/>
            <EditText
                android:id="@+id/aucreate_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/colorBluePrimary"
                android:ems="10"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorBluePrimary"
                android:textColorHint="@color/colorBlueSecondary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/password_placeholder"
                android:textSize="16dp"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="@color/colorBlackPrimary"/>
            <EditText
                android:id="@+id/aucreate_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/colorBluePrimary"
                android:ems="10"
                android:hint="password"
                android:inputType="textPassword"
                android:textColor="@color/colorBluePrimary"
                android:textColorHint="@color/colorBlueSecondary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Role"
                android:textSize="16dp"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="@color/colorBlackPrimary"/>
            <Spinner
                android:id="@+id/aucreate_role"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/colorBluePrimary"
                android:entries="@array/spinner_user_role"
                android:padding="12dp"
                android:theme="@style/spinnerWhite"
                android:textColorHint="@color/colorBlueSecondary"  />

            <Button
                android:id="@+id/aucreate_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_btn_blue"
                android:text="Add User"
                android:textColor="#fff" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>