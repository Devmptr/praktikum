<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.admin.AdminFragment">

    <LinearLayout
        android:id="@+id/wrapper_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_admin_user"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:paddingEnd="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/crud_user"
            android:text="CRUD USER"
            android:textColor="@color/colorBluePrimary"
            android:textSize="36sp"
            android:fontFamily="@font/opensans_bold"
            android:gravity="bottom|end"/>

        <Button
            android:id="@+id/btn_admin_keluarga"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:paddingEnd="8dp"
            android:background="@drawable/crud_keluarga"
            android:text="CRUD KELUARGA"
            android:textColor="@color/colorBluePrimary"
            android:textSize="36sp"
            android:fontFamily="@font/opensans_bold"
            android:gravity="bottom|end"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>